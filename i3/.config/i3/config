exec_always --no-startup-id "picom -b --config /home/$USER/.config/picom/picom.conf"

# ------------------------------------------
# Gnome keyring (Used to recover passwords from ald gnome WM) 
# Check:    https://www.reddit.com/r/i3wm/comments/8zj0jl/passwords_are_not_saved_in_google_chrome_in_i3/
#           https://askubuntu.com/questions/1374986/google-chrome-looses-all-cookies-when-logging-in-a-different-desktop-environment
# ------------------------------------------
exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets

